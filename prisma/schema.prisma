// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource sqlite {
  provider = "sqlite"
  url      = "file:../ifx-sws.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model sfObject {
  @@map(name: "sfObjects")
  @@index([type, timestamp])

  id String @id
  type String
  timestamp DateTime
  data String
  changes String?
}

model webhookRequest {
  @@map(name: "webhookRequests")

  id Int @default(autoincrement()) @id
  url String
  method String @default("post")
  headers String?
  data String?
  attempts Int @default(0)
  nextRunDate DateTime
}

model webhook {
  @@map(name: "webhooks")

  id Int @default(autoincrement()) @id
  name String
  url String
  method String @default("post")
  enabled Boolean @default(false)

  webhookInterests webhookInterest[]
}

model webhookInterest {
  @@map(name: "webhookInterests")
  @@unique([sfObjectTypeId, webhookId])

  id Int @default(autoincrement()) @id

  webhookId Int
  webhook webhook @relation(fields: [webhookId], references: [id])

  sfObjectTypeId Int
  sfObjectType sfObjectType @relation(fields: [sfObjectTypeId], references: [id])
}

model sfObjectType {
  @@map(name: "sfObjectTypes")

  id Int @default(autoincrement()) @id
  name String @unique
  enabled Boolean @default(false)
  syncDate DateTime
}

model session {
  @@map(name: "sessions")

  id Int @default(autoincrement()) @id
  token String
  createdAt DateTime
}
